@using Application.Services.UserHotelServices.GetUserData
@model GetBookingDataDto;

@if(Model is null){
    <div class="text-center">
        <h3>Not any thing</h3>
    </div>
}else{
    <div class="row">
        <div class="card">
            <div class="card-header bg-white">
                <h3 class="card-header">Your Information about your booking</h3>
            </div>

            <div class="card-body p-3">

                <!-- first row -->
                <div class="d-flex justify-content-around align-items-baseline mb-3">
                    <div>
                        <h3>Name: </h3>
                        <p>@Model.PassengerName</p>
                    </div>

                    <div>
                        <h3>Family: </h3>
                        <p>@Model.PassengerFamilyName</p>
                    </div>
                </div>


                <!-- second row -->
                <div class="d-flex justify-content-around align-items-baseline mb-3">
                    <div>
                        <h3>Start Date: </h3>
                        <p>@Model.StartDate.ToShortDateString()</p>
                    </div>

                    <div>
                        <h3>End Date: </h3>
                        <p>@Model.EndDate.ToShortDateString()</p>
                    </div>
                </div>

                <!-- third row -->
                <div class="d-flex justify-content-around align-items-baseline mb-3">
                    <div>
                        <h3>BookingId: </h3>
                        <p>@Model.BookingCode</p>
                    </div>

                    <div>
                        <h3>Status: </h3>
                        <p>@Model.BookingStatus</p>
                    </div>
                </div>

                <!-- fouth row-->
                <div class="d-flex justify-content-around align-items-baseline mb-3">
                    <div>
                        <h3>Hotel: </h3>
                        <p>@Model.HotelName</p>
                    </div>

                    <div>
                        <h3>Room: </h3>
                        <p>@Model.RoomName</p>
                    </div>
                </div>

                <!-- fifth row -->
                <div class="d-flex justify-content-around align-items-baseline mb-3">
                    <div>
                        <h3>Length: </h3>
                        <p>@Model.LengthOfStay</p>
                    </div>

                    <div>
                        <h3>Total Price </h3>
                        <p>@Model.TotalPrice.ToString("C")</p>
                    </div>
                </div>

            </div>

            <div class="card-footer bg-white">
                <div>
                    <button class="btn btn-success" onclick="window.print()">Print</button>
                </div>
            </div>
        </div>
    </div>
}

