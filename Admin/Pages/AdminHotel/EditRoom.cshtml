@page
@model Admin.Pages.AdminHotel.EditRoomModel
@{
}

<h1>Edit Room </h1>
<hr /><br />

<form asp-page="EditRoom">
    <div asp-validation-summary="ModelOnly"  class="text-danger"></div>

    <div class="row">
        <div class="col-sm-4">
            <label asp-for="@Model.Room.Name" class="form-label"></label>
            <input asp-for="@Model.Room.Name" class="form-control" />
            <span asp-validation-for="@Model.Room.Name" class="text-danger"></span>
        </div>
        <div class="col-sm-4">
            <label asp-for="@Model.Room.Capacity" class="form-label"></label>
            <input asp-for="@Model.Room.Capacity" class="form-control" />
            <span asp-validation-for="@Model.Room.Capacity" class="text-danger"></span>
        </div>
        <div class="col-sm-4">
            <label asp-for="@Model.Room.PricePerNight" class="form-label"></label>
            <input asp-for="@Model.Room.PricePerNight" class="form-control" />
            <span asp-validation-for="@Model.Room.PricePerNight" class="text-danger"></span>
        </div>
    </div>
    <input asp-for="@Model.Room.Id" class="form-control" type="hidden" />
    <br />
    <hr />
    <div class="row">
        <div class="col-sm-6">
            <label asp-for="@Model.Room.PriceAdditionalPersonPerNight" class="form-label"></label>
            <input asp-for="@Model.Room.PriceAdditionalPersonPerNight" class="form-control" />
            <span asp-validation-for="@Model.Room.PriceAdditionalPersonPerNight" class="text-danger"></span>
        </div>
        <div class="col-sm-6">
            <label asp-for="@Model.Room.IsAbilityAdditionalPerson" class="form-check-label"></label>
            <input asp-for="@Model.Room.IsAbilityAdditionalPerson" class="form-check-input" />
        </div>
    </div>
    <br /><br />
    <input type="submit" class="btn btn-outline-success" value="Edit Room" />
</form>