@page
@model Admin.Pages.Comment.EditCommentModel
@{
    var id = HttpContext.Request.Query["id"];
}


<h1>Comment related to @Model.Comment.HotelName</h1>
<hr /><br />

<div class="row border p-3">
    <p class="fs-4">@Model.Comment.Body</p>
</div>

<form asp-page="EditComment" method="post">
    <div class="d-flex justify-content-between p-3 my-3 border rounded">
        <h4>Change Status</h4>
        <div>
            <label class="form-check-label">Waiting</label>
            <input type="radio" name="StatusComment" class="form-check-input" value="Waiting"/>
        </div>
        <div>
            <label class="form-check-label">Accepted</label>
            <input type="radio" name="StatusComment" class="form-check-input" value="Accepted" />
        </div>
        <div>
            <label class="form-check-label">Rejected</label>
            <input type="radio" name="StatusComment" class="form-check-input" value="Rejected" />
        </div>
    </div>

    <input type="hidden" name="id" value="@id" />

    <input type="submit" value="Change Status" class="btn btn-success form-control" /> 
</form>